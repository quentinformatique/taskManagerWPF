<Window x:Class="taskManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:taskManagerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Content="Tasks :" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>
        <ListView  ItemsSource="{Binding TaskItems}"  Margin="30,54,0,54" Width="245" HorizontalAlignment="Left">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding title}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Grid.Column="1" Content="Add task" HorizontalAlignment="Left" Margin="75,76,0,0" VerticalAlignment="Top" Height="33" Width="165" Command="{Binding AddTaskCommand}"/>
        <Button Grid.Column="1" Content="Delete task" HorizontalAlignment="Left" Margin="75,136,0,0" VerticalAlignment="Top" Height="33" Width="165" Command="{Binding DeleteTaskCommand}"/>
    </Grid>
</Window>
